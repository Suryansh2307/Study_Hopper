<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        card_view:cardCornerRadius="5dp"
        card_view:cardElevation="6dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/studyGroupName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_centerVertical="true"
                android:layout_marginEnd="20dp"
                android:text="INSERT GROUP NAME"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/studyGroupColor"
                android:contentDescription="color for study groups"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10dp"
                android:src="@drawable/ic_study_group_color"/>

            <TextView
                android:id="@+id/studyGroupClass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_centerVertical="true"
                android:layout_below="@+id/studyGroupName"
                android:layout_marginEnd="20dp"
                android:text="COP 4970"
                android:textStyle="italic"
                android:textSize="13sp" />


        </RelativeLayout>


    </androidx.cardview.widget.CardView>


</RelativeLayout>